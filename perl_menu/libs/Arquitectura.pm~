package Arquitectura; 

  use strict;
  use warnings;

  use POSIX qw(strftime);

    BEGIN {
        require Exporter;

        # establecer la versión para la comprobación de versión
        our $VERSION     = 1.00;

        # heredar de Exporter para exportar funciones y variables
        our @ISA         = qw(Exporter);

        # funciones y variables que se exportan de forma predeterminada
        our @EXPORT      = qw(get_ssoo trim ltrim rtrim initpila insertpila extraepila $dato $res $string $res_ssoo @pila leoparam %hash_param get_dia $dia 
                            list_environment get_hora $hora);

        # funciones y variables que se exportan de forma opcional
        our @EXPORT_OK   = qw($Var1 %Hash1 func3);
    }

    # las variables globales de paquete exportadas van aquí
    our $Var1    = '';
    our $res_ssoo = '';
    our $res ='';
    our $string = '';
    our %Hash1  = ();
    our $dato = '';
    our $dia='';
    our $hora='';

    # las variables globales de paquete no exportadas van aquí
    # (son accesibles mediante $Mi::Modulo::cosa)
    our @otras    = ();
    our $cosa   = '';
    our @pila = ();
    our %hash_param = {};
    

    # las variables léxicas privadas del archivo van aquí, antes que las funciones que las usan
    my $var_priv    = '';
    my %hash_secreto = ();
   

    # aquí va una función privada del archivo, como clausura
    # puede llamarse mediante $func_priv->();
 
   my $func_priv = sub {
        
    };

    


    sub list_environment
            {

             my $key="";  

             foreach $key (sort keys(%ENV)) {
                       print "$key = $ENV{$key}";
                                             }    

            ; 

             }    

################################################################################
#### Perl get_ssoo devuelve el sistema operativo
##################################################################################

    sub get_ssoo      {

        my ($parametros) = @_;
	
	my $osname = $^O;


        if( $osname eq 'MSWin32' ){{
              eval { require Win32; } or last;
              $osname = Win32::GetOSName();
              # work around for historical reasons
              $osname = 'WinXP' if $osname =~ /^WinXP/;
                                   }}
        $res_ssoo = $osname;         
	
	return ($res_ssoo)
                   }

################################################################################
#### Perl get_dia devuelve el dia
##################################################################################

    sub get_dia      {

         $dia = strftime "%a %b %e %Y", localtime;

	return ($dia)
                   }


################################################################################
#### Perl get_hora devuelve la hora
##################################################################################

    sub get_hora      {

                  
         $hora = strftime "%H:%M:%S ", localtime;
        
	
	return ($hora)
                   }


################################################################################
#### Perl initpila inicializa la pila
##################################################################################


sub initpila

 {
     my  @pila= @_;
     push @pila,'FIN';
     return @pila;
 }

################################################################################
#### Perl insertpila inserta elemento en la pila
#######
########################################################################### 

sub insertpila
 {
   my  ($dato, @pila) = @_;
   push @pila,$dato;
   return @pila;
 }

################################################################################
#### Perl extraepila extrae elemento de la pila
##################################################################################

sub extraepila
 {
   my  @pila= @_;
   $dato= pop @pila ;
   return ($dato,@pila);
 }

################################################################################
#### Perl trim function to remove whitespace from the start and end of the string
##################################################################################
sub trim($)
{
 my $string = shift;
 $string =~ s/^\s+//;
 $string =~ s/\s+$//;
 return $string;
   }
#################################################
# Left trim function to remove leading whitespace
#################################################
sub ltrim($)
 {
  my $string = shift;
  $string =~ s/^\s+//;
  return $string;
 }
##################################################
# Right trim function to remove trailing whitespace
##################################################
sub rtrim($)
 {
  my $string = shift;
  $string =~ s/\s+$//;
  return $string;
 }

##################################################
# Read File of param. Return a Hash with the variables
##################################################
sub leoparam($)
 {
  my $param_string = shift;
  my $linea ="";
  my $variable ="";
  my $valor="";


  if ( $param_string eq '' ) {
                                $param_string="./param.txt";
                              }
 
   open(FILEPAR, "< $param_string")
    or die "Couldn't open File $param_string   \n";

    while (defined ($linea = <FILEPAR>)) {
     
    $linea=trim($linea);
     
    if (( substr $linea, 0, 1)  ne '#' ) {    

     ($variable, $valor) = split('=', $linea);
         $variable =  trim($variable);
         $valor =  trim($valor);
         $hash_param{ $variable } = $valor;
           
                                         }   # if
  
                                      }  # while
   close (FILEPAR); 

   return %hash_param;
   
 }
  
 
    END {  }       # el código de limpieza del módulo va aquí (destructor global)


1;
